{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "alexis",
	"main": "src/index.ts",
	"compatibility_date": "2025-03-10",
	"compatibility_flags": ["nodejs_compat"],
	"migrations": [
		{
			"new_sqlite_classes": ["MyMCP"],
			"tag": "v1"
		}
	],
	"durable_objects": {
		"bindings": [
			{
				"class_name": "MyMCP",
				"name": "MCP_OBJECT"
			}
		]
	},
	"observability": {
		"enabled": true
	},
	"vars": {
		"PINECONE_HOST": "https://cleopatra-homveqo.svc.aped-4627-b74a.pinecone.io"
	}
	// Note: PINECONE_API
	// _KEY and OPENAI_API_KEY should be set as secrets using:
	// wrangler secret put PINECONE_API_KEY
	// wrangler secret put OPENAI_API_KEY
}